@model SindTech.App.ViewModels.MoradorViewModel

@{
    ViewData["Title"] = "Detalhes do Morador " + Model.Nome;
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CPF)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CPF)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroApartamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeroApartamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoMorador)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoMorador)
        </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contato.TipoContato)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contato.TipoContato)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contato.ValorContato)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contato.ValorContato)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a> &nbsp;
    <a asp-action="Index" class="btn btn-primary ">Voltar</a>
</div>
