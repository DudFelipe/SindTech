@using SindTech.App.Extensions
@using SindTech.App.ViewModels
@using SindTech.Business.Models
@model IEnumerable<MoradorViewModel>

@{
    ViewData["Title"] = "Lista de Moradores";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-info">Novo Morador <span class="fa fa-plus-circle"></span></a>
</p>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                Contato
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem  => item.Nome)
                </td>
                <td>
                    @this.FormataCPF(item.CPF)
                </td>
                <td>
                    @this.FormataCeluluar(item.Contato.TipoContato, item.Contato.ValorContato)
                </td>
                <td class="text-right">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><span class="fa fa-search"></span></a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><span class="fa fa-pencil"></span></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><span class="fa fa-trash"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>