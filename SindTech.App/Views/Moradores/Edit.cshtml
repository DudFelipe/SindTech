@model SindTech.App.ViewModels.MoradorViewModel

@{
    ViewData["Title"] = "Editar Morador";
}

<h1>Editar Morador: @Model.Nome</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="CPF" class="control-label"></label>
                    <input asp-for="CPF" class="form-control" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="DataNascimento" class="control-label"></label>
                    <input asp-for="DataNascimento" class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="NumeroApartamento" class="control-label"></label>
                    <input asp-for="NumeroApartamento" class="form-control" />
                    <span asp-validation-for="NumeroApartamento" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="TipoMorador" class="control-label"></label><br />

                    &nbsp;&nbsp;&nbsp;&nbsp;

                    <input type="radio" value="1" asp-for="TipoMorador" checked class="form-check-input form-check-inline"/>
                    <label class="form-check-label">Morador</label>

                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

                    <input type="radio" value="2" asp-for="TipoMorador" class="form-check-input form-check-inline"/>
                    <label class="form-check-label">Síndico</label>

                    <span asp-validation-for="TipoMorador" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <partial name="_DetalhesContato" />
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
