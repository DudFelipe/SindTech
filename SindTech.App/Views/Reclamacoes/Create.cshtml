@model SindTech.App.ViewModels.ReclamacaoViewModel

@{
    ViewData["Title"] = "Cadastrar Reclamação";
}

<h1>@ViewData["Title"]</h1>

<hr/>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <vc:summary></vc:summary>

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Descricao" class="control-label"></label>
                    <textarea asp-for="Descricao" class="form-control" cols="50" rows="10"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="MoradorId" class="control-label"></label>
                    <select asp-for="MoradorId" class="form-control" asp-items="@(new SelectList(Model.Moradores, "Id", "Nome"))">
                        <option></option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success"> &nbsp;
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>